{
  "compilerOptions": {
    "target": "es2022",
    "useDefineForClassFields": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@environment": ["./src/environments/environment.ts"],
      "@core/*": ["./src/app/core/*"],
      "@modules/*": ["./src/app/modules/*"],
      "@ng-shop-workspace/auth-state": ["../../libs/state/auth-state/src/index.ts"],
			"@ng-shop-workspace/shop-state": ["../../libs/state/shop-state/src/index.ts"],
			"@ng-shop-workspace/core-common": ["../../libs/core/core-common/src/index.ts"],
			"@ng-shop-workspace/core-test": ["../../libs/core/core-test/src/index.ts"],
			"@ng-shop-workspace/common-ui": ["../../libs/core/common-ui/src/index.ts"],
    }
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "./tsconfig.editor.json"
    }
  ],
  "extends": "../../tsconfig.base.json",
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
